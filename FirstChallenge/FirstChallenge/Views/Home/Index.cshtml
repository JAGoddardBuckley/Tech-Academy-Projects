@model List<FirstChallenge.Models.ComicBook>
@{
    ViewBag.Title = "My Comics";
}

<h1>My Comics</h1>

@foreach (var comic in Model)
{
    <h2>@Html.ActionLink(comic.ComicTitle, "Detail", new { id = comic.ComicBookId })</h2>
    <h3>#@comic.EpisodeNumber - @comic.EpisodeTitle</h3>

    var characters = comic.Characters.Select(p => p.Name).ToArray();
    var charString = String.Join(", ", characters);
    <p><strong>Starring:</strong> @charString</p>
   
}

